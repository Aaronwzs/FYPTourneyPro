@page "{categoryId:guid}"
@model FYPTourneyPro.Pages.TourCategory.DrawListModel
@{
    ViewData["Title"] = "Draw List for Category: " + Model.Category.Name;
}

<div class="container">
    <abp-card>
        <abp-card-header>
            <abp-card-title>
                Draw List for @Model.Category.Name
            </abp-card-title>
        </abp-card-header>
        <abp-card-body>
            <h3>Generated Matches</h3>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Match ID</th>
                            <th>Round</th>
                            <th>Participants</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var match in Model.Matches)
                        {
                            <tr>
                                <td>@match.Id</td>
                                <td>@match.round</td>
                                <td>
                                    @foreach (var participant in Model.MatchParticipants.Where(mp => mp.matchId == match.Id))
                                    {
                                        <span>@participant.userId</span>

                                        <br />
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </abp-card-body>
    </abp-card>
</div>

