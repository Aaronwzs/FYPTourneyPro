@page
@model FYPTourneyPro.Pages.Category.IndexModel
@section styles {
    <abp-style src="/Pages/Category/index.css" />
}
@section scripts {
    <abp-script src="/Pages/Category/index.js" />
}

<div class="container">
    <abp-card>
        <abp-card-header>
            <abp-card-title>
                CATEGORY
            </abp-card-title>
        </abp-card-header>
        <abp-card-body>
            <div class="row">
                
                <div class="col-md-6">

                    <!-- FORM FOR NEW CATEGORY STARTS-->
                    <form id="NewCategoryForm" class="row row-cols-lg-auto g-3 align-items-center mb-4">
                        <div class="col-12">
                            <input type="hidden" id="TournamentId" value="@Model.TournamentId" />
                            <input id="CategoryName" type="text" class="form-control" placeholder="Category Name" required>
                        </div>
                        <div class="col-12">
                            <textarea id="CategoryDescription" class="form-control" placeholder="Description" required></textarea>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Add Category</button>
                        </div>
                    </form>

                    <!-- CATEGORY LIST -->
                    <div class="mb-4">
                        <h4>Categories</h4>
                        <ul id="CategoryList">
                            @foreach (var category in Model.Categories)
                            {
                                <li data-id="@category.Id">
                                    <i class="fa fa-trash-o"></i> 
                                    <a  href="@Url.Page("/Category/CatPartList", new { categoryId = category.Id })">
                                        @category.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                    <!-- FORM FOR NEW CATEGORY ENDS-->

                    <!-- PLAYER REGISTRATION SECTION STARTS-->
                    <div class="mt-5">
                        <h4>Player Registration</h4>
                        <form id="PlayerRegistrationForm" class="row g-3">
                            <input type="hidden" id="RegTournamentId" value="@Model.TournamentId" />
                            <div class="col-md-6">
                                <label for="RegistrationDate" class="form-label">Registration Date</label>
                                <input type="text" class="form-control" id="RegistrationDate" readonly>
                            </div>
                            <div class="col-md-6">
                                <label for="RegistrationAmount" class="form-label">Registration Amount</label>
                                <input type="number" class="form-control" id="RegistrationAmount" step="0.01" required>
                            </div>
                            <div class="col-md-12">
                                <label for="CategorySelect" class="form-label">Select Category</label>
                                <select class="form-control" id="CategorySelect" required>
                                    <option value="">-- Select Category --</option>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-success">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- PLAYER REGISTRATION SECTION ENDS-->

                <!--  Registered Participants List Starts-->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title mb-0">Registered Participants</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped" id="RegistrationsTable">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Date</th>
                                            <th>Category</th>
                                            <th>Amount</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="RegistrationsList">
                                        @foreach (var registration in Model.Registrations)
                                        {
                                            <tr data-id="@registration.Id">
                                                <td>@registration.UserName</td>
                                                <td>@registration.Date.ToShortDateString()</td>
                                                <td>
                                                    @(Model.Categories.FirstOrDefault(c => c.Id == registration.CategoryId)?.Name ?? "N/A")
                                                </td>
                                                <td>@registration.Amount.ToString("C")</td>
                                                <td>
                                                    <button class="btn btn-sm btn-danger delete-registration" title="Delete Registration">
                                                        <i class="fa fa-trash-o"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--  Registered Participants List Ends-->
        </abp-card-body>
    </abp-card>
</div>