@page
@model FYPTourneyPro.Pages.Chat.IndexModel

@section scripts {
    <abp-script src="/Pages/Chat/index.js" />
}

@section styles{
    <abp-style src="/Pages/Chat/index.css" />
}

@{
    <div id="chatroomContainer">
        <!-- Button to Create Group Chat -->
        <button id="createChatButton">Create Chat</button>

        <!-- Chatroom Creation Form (Hidden by Default) -->
        <div id="createGroupChatForm" style="display: none;">
            <h2>Create Chat</h2>
            <form id="createGroupForm">
                <!-- Input for Group Name -->
                <label for="groupName">Group Name:</label>
                <input type="text"
                       id="groupName"
                       placeholder="Enter group name"
                       required />

                <!-- Searchable Participant List -->
                <label for="searchParticipants">Search Participants:</label>
                <input type="text"
                       id="searchParticipants"
                       placeholder="Search participants..." />
                <div id="participantsContainer">
                    <!-- Dynamic Checkboxes for Participants -->
                    <p>Participants will be dynamically added here...</p>
                </div>

                <!-- Button to Submit -->
                <button type="submit">Create Chat</button>
            </form>
        </div>
    </div>
    <div>
        <input type="text"
               id="chatSearchBar"
               placeholder="Search chat..."
               onkeyup="filterChatRooms()"
               class="form-control" />
    </div>
        <!-- Chatroom Rows -->
    <div id="chatRoomsList">
        <!-- Chat rooms will be dynamically added here -->
    </div>

}
