@page
@model FYPTourneyPro.Pages.DiscussionBoard.CommentsModel
@{
    ViewData["Title"] = "Post Comments";
}

@section scripts {
    <abp-script src="/Pages/DiscussionBoard/Comments.js" />
}

<style>
.active {
    background-color: greenyellow; /* Highlight the active button */
    color: black;
    border: 2px solid black;
}
</style>
<h2>@Model.Post.Title</h2>
<p>@Model.Post.Content</p>
<div>
    <!-- Display the upvote count and button -->
    <button id="upvoteButton" class="btn btn-success" onclick="vote('Upvote', '@Model.Post.Id')">
        👍 Upvote (@Model.Upvotes)
    </button>

    <!-- Display the downvote count and button -->
    <button id="downvoteButton" class="btn btn-danger" onclick="vote('Downvote', '@Model.Post.Id')">
        👎 Downvote (@Model.Downvotes)
    </button>
</div>

<h3>Comments</h3>
<ul>
    @foreach (var comment in Model.Comments)
    {
        <li>
            <p>@comment.Content</p>
            <p><small>By: @comment.CreatedByUserId</small></p>
        </li>
    }
</ul>

<!-- Form to Add a New Comment -->
<h3>Add a Comment</h3>
<form id="addCommentForm">
    <textarea id="newCommentContent" placeholder="Write your comment..." rows="4" class="form-control"></textarea>
    <button type="submit" class="btn btn-primary mt-2">Add Comment</button>
</form>

