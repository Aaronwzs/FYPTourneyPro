@page
@model FYPTourneyPro.Pages.DiscussionBoard.indexModel
@{
    ViewData["Title"] = "Discussion Board";
}

@section scripts {
    <abp-script src="/Pages/DiscussionBoard/index.js" />
}


<style>
    h4.text-primary {
        color: #007bff;
        font-weight: bold;
        margin-bottom: 20px;
    }

    h4.text-success {
        color: #28a745;
        font-weight: bold;
        margin-bottom: 20px;
    }
</style>

<div class="container mt-4">
    <h2 class="text-center mb-4">Discussion Board</h2>

    <!-- Create New Post Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a class="btn btn-primary" href="/DiscussionBoard/Create">Create New Post</a>
        <div class="form-group w-50">
            <label for="filterSelect">Filter by:</label>
            <select id="filterSelect" class="form-select" onchange="applyFilter()">
                <option value="hot">Hot</option>
                <option value="best">Best</option>
                <option value="latest">Latest</option>
            </select>
        </div>
    </div>

    <!-- Public Discussions Section -->
    <div class="mb-5">
        <h4>Public Discussions</h4>
        @if (Model.Posts != null && Model.Posts.Any())
        {
            <div class="row row-cols-1 row-cols-md-2 g-4">
                @foreach (var post in Model.Posts)
                {
                    <div class="col">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@post.Title</h5>
                                <p class="card-text">@post.Content</p>
                                <p class="text-muted small mb-1">
                                    Posted by <strong>@post.CreatedByUsername</strong> at @post.CreationTime
                                </p>
                                <button class="btn btn-primary btn-sm" onclick="window.location.href='/DiscussionBoard/Comments?postId=@post.Id'">View</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center">No public posts available.</p>
        }
    </div>

    <!-- Author's Own Posts Section -->
    <div>
        <h4>Your Posts</h4>
        @if (Model.YourPosts != null && Model.YourPosts.Any())
        {
            <div class="row row-cols-1 row-cols-md-2 g-4">
                @foreach (var post in Model.YourPosts)
                {
                    <div class="col">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@post.Title</h5>
                                <p class="card-text">@post.Content</p>
                                <p class="text-muted small mb-1">Created on @post.CreationTime</p>
                                <button class="btn btn-warning btn-sm" onclick="openEditModal('@post.Id', '@post.Title', '@post.Content')">Edit</button>
                                <button class="btn btn-danger btn-sm delete-btn" data-id="@post.Id">Delete</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center">You haven't created any posts yet.</p>
        }
    </div>
</div>
}
