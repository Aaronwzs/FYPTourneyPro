@page 
@using System.Security.Claims
@model FYPTourneyPro.Pages.TourRegistration.indexModel
@section styles {
    <abp-style src="/Pages/TourRegistration/index.css" />
}

@section scripts {
    <abp-script src="/Pages/TourRegistration/index.js" />
}

<div class="container">
    <input id="tournamentId" value="@Model.TournamentId" hidden />
    <input id="userId" value="@Model.UserId" hidden />
    <abp-card>
        <abp-card-header>
            <abp-card-title>
                Register for Tournament
            </abp-card-title>
        </abp-card-header>
        <abp-card-body>
            <div class="row">
                <div class="col-md-6">
                    <!-- FORM FOR NEW REGISTRATION -->
                    <form id="registrationForm">
                        <div class="form-group">
                            <label for="categorySelect">Category</label>
                            <select id="categorySelect" class="form-control" required>
                                <option value="">Select Category</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="player1">Player 1</label>
                            <input type="text" id="player1" class="form-control" value="@Model.UserName" readonly />
                        </div>

                        <div class="form-group" id="player2Container" style="display:none;">
                            <label for="player2">Player 2</label>
                            <input type="text" id="player2" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="regDate">Registration Date</label>
                            <input type="date" id="regDate" class="form-control" required />
                        </div>

                        <div class="form-group">
                            <label for="totalAmount">Total Amount</label>
                            <input type="number" id="totalAmount" class="form-control" required />
                        </div>

                        <button type="submit" class="btn btn-primary">Register</button>
                    </form>

                   
                    
                </div>
            </div>
        </abp-card-body>
    </abp-card>
</div>